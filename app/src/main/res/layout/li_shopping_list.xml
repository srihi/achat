<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/shopping_list_height"
              android:layout_gravity="center"
              android:layout_marginBottom="@dimen/shopping_list_margin"
              android:layout_marginTop="@dimen/shopping_list_margin"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_shopping_list_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txt_shopping_list_item_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:layout_weight="2"
        android:gravity="center_vertical|end"
        android:padding="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:textStyle="normal"/>
</LinearLayout>