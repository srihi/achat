<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.dankira.achat.views.AddNewListDialog">

    <EditText
        android:id="@+id/edit_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input_text_default_padding"
        android:layout_marginTop="@dimen/input_text_default_padding"
        android:hint="@string/new_list_title_hint"/>

    <EditText
        android:id="@+id/edit_list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input_text_default_padding"
        android:layout_marginTop="@dimen/input_text_default_padding"
        android:gravity="start|start"
        android:hint="@string/new_list_desc_hint"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="6"
        android:minLines="2"
        />


</LinearLayout>
