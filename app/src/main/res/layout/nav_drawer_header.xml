<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_drawer_header_height"
              android:background="@color/primary"
              android:layout_gravity="center"
              android:gravity="center"
              android:paddingStart="@dimen/nav_header_left_padding"
              android:paddingTop="@dimen/nav_header_top_padding">
    <ImageView
        android:id="@+id/nav_header_avatar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/nav_drawer_user_email"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|start"
        android:gravity="start|center_vertical"
        android:layout_weight="4"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/nav_header_text_left_padding"
        android:layout_toEndOf="@id/nav_header_avatar_image"/>

    <ImageButton
        android:id="@+id/nav_drawer_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:layout_gravity="center_vertical|end"
        android:background="@null"
        android:tint="@color/icons"
        android:src="@drawable/icon_chevron_left"
        />


</FrameLayout>